<!DOCTYPE html>
<html>
<head>
    <title>{{title}}</title>
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
</head>
<body>
<div class="bg"></div>
<div class="bg bg2"></div>
<div class="bg bg3"></div>
<div class="content">
    <div class="content-box">
        <div class="content-box-item">
            <h1>Eureka test task</h1>
        </div>
        {{#if searchUser}}
            <div class="content-box-item">
                <h2 id="result" class="content-box-item">{{searchUser}}</h2>
            </div>
            <div class="content-box-item">
                <div class="container content-box-item">
                    <div id="back-button" class="button button--pen">
                        <div class="button__wrapper">
                            <span class="button__text">Назад</span>
                        </div>
                        <div class="characterBox">
                            <div class="character wakeup">
                                <div class="character__face"></div>
                                <div class="charactor__face2"></div>
                            </div>
                            <div class="character wakeup">
                                <div class="character__face"></div>
                                <div class="charactor__face2"></div>
                            </div>
                            <div class="character">
                                <div class="character__face"></div>
                                <div class="charactor__face2"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="content-box-item">
                <input type="text" id="username" class="form__input" placeholder="Username">
                <label for="username" class="form__label">Имя пользователя</label>
            </div>
            <div class="container content-box-item">
                <div id="search-button" class="button button--pen">
                    <div class="button__wrapper">
                        <span class="button__text">Проверить</span>
                    </div>
                    <div class="characterBox">
                        <div class="character wakeup">
                            <div class="character__face"></div>
                            <div class="charactor__face2"></div>
                        </div>
                        <div class="character wakeup">
                            <div class="character__face"></div>
                            <div class="charactor__face2"></div>
                        </div>
                        <div class="character">
                            <div class="character__face"></div>
                            <div class="charactor__face2"></div>
                        </div>
                    </div>
                </div>
            </div>
        {{/if}}
    </div>
</div>

<script src="/javascripts/main.js"></script>
</body>
</html>
